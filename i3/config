bindsym $mod+KP_Begin			exec --no-startup-id "$scripts/xmovecorner 5"
bindsym $mod+KP_Right			exec --no-startup-id "$scripts/xmovecorner 6"
bindsym $mod+KP_Home			exec --no-startup-id "$scripts/xmovecorner 7"
