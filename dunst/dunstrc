    ### History ###
    sticky_history = yes
    history_length = 50

    ### Misc/Advanced ###
    dmenu = /usr/bin/rofi -dmenu -p dunst:
    browser = /usr/bin/chromium
    always_run_script = true
    title = Dunst
    class = Dunst
    startup_notification = false
    force_xinerama = false
    verbosity = mesg

